{{#extend "layout" title="Light Blue HTML5 Dashboard - Sparkline Charts"}}
    {{#content "sidebar"}}
        {{> sidebar active="charts_sparkline"}}
    {{/content}}
    {{#content "content" mode="replace"}}
        <ol class="breadcrumb">
            <li class="breadcrumb-item">YOU ARE HERE</li>
            <li class="breadcrumb-item">Charts</li>
            <li class="breadcrumb-item active">Sparkline</li>
        </ol>
        <h1 class="page-title">Visual - <span class="fw-semi-bold">Charts</span></h1>
        <div class="row">
            <div class="col-lg-6 col-xl-5">
                <section class="widget">
                    <header>
                        <h5>
                            Sparkline <span class="fw-semi-bold">Bar Chart</span>
                        </h5>
                        <div class="widget-controls">
                            <a href="#" data-widgster="close"><i class="la la-remove"></i></a>
                        </div>
                    </header>
                    <div class="widget-body">
                        <p class="fs-mini text-muted">
                            Each example displayed below takes just 1 line of HTML or javascript to generate.
                        </p>
                        <div id="sparkline4" class="chart-overflow-bottom mb-0 text-center"></div>
                        <div class="stats-row text-muted mt">
                            <div class="stat-item">
                                <h6 class="name">ARR ($)</h6>
                                <p class="value">4 375 800</p>
                            </div>
                            <div class="stat-item">
                                <h6 class="name">MRR ($)</h6>
                                <p class="value">863 425</p>
                            </div>
                            <div class="stat-item">
                                <h6 class="name">TTN ($)</h6>
                                <p class="value">5 634 100</p>
                            </div>
                            <div class="stat-item">
                                <h6 class="name">MRR / ARR </h6>
                                <p class="value">0.1634</p>
                            </div>
                        </div>
                        <hr>
                        <p class="clearfix text-muted">
                            <small class="float-left">
                                <span class="badge badge-warning">Profit</span> Legend Item Emulation
                            </small>
                            <small class="float-right">
                                <span class="badge badge-danger">Loss</span> Legend Item Emulation
                            </small>
                        </p>
                    </div>
                </section>
            </div>
            <div class="col-lg-6 col-xl-4">
                <section class="widget">
                    <header>
                        <h5>
                            Sparkline <span class="fw-semi-bold">Pie Chart</span>
                        </h5>
                        <div class="widget-controls">
                            <a href="#" data-widgster="close"><i class="la la-remove"></i></a>
                        </div>
                    </header>
                    <div class="widget-body">
                        <p class="fs-mini text-muted">
                            Each example displayed below takes just 1 line of HTML or javascript to generate.
                        </p>
                        <div id="sparkline2" class="chart-overflow-bottom mb-0 text-center"></div>
